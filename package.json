{
	"name": "mcp-coinglass",
	"version": "0.0.1",
	"description": "An MCP server for communicating with Coinglass platform via coinglass API",
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"mcp-coinglass": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && shx chmod +x dist/index.js",
		"prepare": "husky",
		"watch": "tsc --watch",
		"start": "node dist/index.js",
		"publish-packages": "pnpm run build && changeset publish",
		"format": "biome format . --write",
		"lint": "biome check ."
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"axios": "^1.11.0",
		"axios-retry": "^4.5.0",
		"dedent": "^1.6.0",
		"dotenv": "^17.2.1",
		"fastmcp": "^3.15.1",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@changesets/cli": "^2.29.6",
		"@types/node": "^22.17.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"shx": "^0.3.4",
		"typescript": "^5.9.2"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
